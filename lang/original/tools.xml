      </reloadbinderandreplace_ltt>
      <entityeditoropen_stt>Open Entity Editor</entityeditoropen_stt>
      <entityeditoropen_ltt>
         <color r="255" g="248" b="178">
            <b>Open Entity Editor</b>
         </color>
         <br>Click to open the Entity Editor tool window.</br>
      </entityeditoropen_ltt>
      <expand_stt>Expand</expand_stt>
      <expand_ltt>
         <color r="255" g="248" b="178">
            <b>Expand</b>
         </color>
         <br>Click to expand the tree view</br>
      </expand_ltt>
      <collapse_stt>Collapse</collapse_stt>
      <collapse_ltt>
         <color r="255" g="248" b="178">
